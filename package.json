{
  "name": "@totominc/command-parser",
  "description": "A modulable terminal command-parser, originally created for skid-inc incremental-game.",
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "yarn build",
    "pretty": "prettier --write \"{src,test}/**/*.ts\"",
    "release": "yarn pretty && npm publish --access public",
    "serve": "parcel serve -p 8080 public/index.html",
    "test": "nyc ava -v -s",
    "test:watch": "ava -v -s -w"
  },
  "devDependencies": {
    "@types/node": "^11.13.2",
    "ava": "^1.4.1",
    "nyc": "^13.3.0",
    "parcel": "^1.12.3",
    "prettier": "^1.16.4",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ],
    "files": [
      "test/**/*.ts",
      "!test/utils/**/*"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/**/*",
      "**/*.d.ts",
      "src/index.ts",
      "src/models/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  }
}
